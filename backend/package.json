{
  "name": "backend",
  "version": "0.0.1",
  "description": "Back end",
  "main": "src/index.js",
  "license": "MIT",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json,graphql,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "postinstall": "yarn run schema:generate",
    "dev": "concurrently -k \"nodemon dist/src/index.js\" \"tsc -w\" \"nodemon -e graphql --exec 'yarn run schema:generate'\"",
    "build": "yarn run schema:generate && tsc",
    "prettier": "prettier --write './**/*.{ts,json,graphql}'",
    "schema:generate": "graphqlgen",
    "seed": "ts-node dev/demeter/index",
    "clean": "rimraf dist **/__generated__",
    "test": "jest"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "^0.0.7",
    "@types/convict": "^4.2.0",
    "@types/express-session": "^1.15.11",
    "@types/jest": "^23.3.8",
    "@types/redis": "^2.8.7",
    "@types/ws": "^6.0.1",
    "concurrently": "^4.0.1",
    "husky": "^1.0.0",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.18.4",
    "prettier": "1.14.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-redis": "^3.4.0",
    "convict": "^4.4.0",
    "elasticsearch": "^15.2.0",
    "express-session": "^1.15.6",
    "graphql-import": "^0.7.1",
    "graphql-yoga": "^1.16.2",
    "graphqlgen": "^0.4.0",
    "pg": "^7.4.3",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.7"
  }
}
